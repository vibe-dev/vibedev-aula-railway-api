{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": "./source",
    "allowJs": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
  },
  "include": [
    "source/**/*"
  ]
}
